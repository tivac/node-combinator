{
    "help" : {
        "alias"       : "h",
        "description" : "Display usage information"
    },
    
    "quiet" : {
        "alias"       : "q",
        "description" : "Minimal output",
        "default"     : false,
        "boolean"     : true
    },

    "file" : {
        "alias"       : "f",
        "description" : "File to process",
        "default"     : "",
        "string"      : true
    },

    "combo" : {
        "alias"       : "c",
        "description" : "Base combo prefix",
        "default"     : "/combo?",
        "string"      : true
    },

    "encoding" : {
        "description" : "Source file encoding",
        "default"     : "utf8",
        "string"      : true
    },

    "extension" : {
        "alias"       : "e",
        "description" : "Filter files by extension",
        "default"     : "html",
        "string"      : true
    },

    "separator" : {
        "description" : "String used to split combo files",
        "default"     : "&",
        "string"      : true
    },

    "suffix" : {
        "description" : "Suffix to append to modified files",
        "default"     : "-combo",
        "string"      : true
    },
    
    "url-filter" : {
        "description" : "Filter which elements are included (regex)",
        "default"     : ".",
        "string"      : true
    },
    
    "loglevel" : {
        "description" : "Chattiness",
        "default"     : "info",
        "string"      : true
    }
}
