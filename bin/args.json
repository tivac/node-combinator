{
    "help" : {
        "alias"       : "h",
        "description" : "Display usage information"
    },
    
    "root" : {
        "demand"      : true,
        "alias"       : "r",
        "description" : "Root directory to use"
    },
    
    "quiet" : {
        "alias"       : "q",
        "description" : "Minimal output"
    },

    "combo" : {
        "alias"       : "c",
        "description" : "Base combo prefix",
        "default"     : "combo?"
    },

    "encoding" : {
        "description" : "Source file encoding",
        "default"     : "utf8"
    },

    "extension" : {
        "alias"       : "e",
        "description" : "Filter files by extension",
        "default"     : "html"
    },

    "file-filter" : {
        "alias"       : "f",
        "description" : "File-name filter (regex)",
        "default"     : "."
    },
    
    "output" : {
        "alias"       : "o",
        "description" : "Location to save modified files to",
        "default"     : "root"
    },
    
    "recurse" : {
        "description" : "Search directories recursively",
        "default"     : true,
        "boolean"     : true
    },

    "separator" : {
        "description" : "String used to split combo files",
        "default"     : "&"
    },

    "suffix" : {
        "description" : "Suffix to append to modified files",
        "default"     : "-combo"
    },
    
    "url-filter" : {
        "description" : "Filter which elements are included (regex)",
        "default"     : "."
    }
}
