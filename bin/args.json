{
    "root" : {
        "demand"      : true,
        "alias"       : "r",
        "description" : "Root directory to use"
    },


    "combo" : {
        "alias"       : "c",
        "description" : "Base combo prefix",
        "default"     : "combo?"
    },

    "encoding" : {
        "description" : "Source file encoding",
        "default"     : "utf8"
    },

    "extension" : {
        "alias"       : "e",
        "description" : "Filter files by extension",
        "default"     : "html"
    },

    "filter" : {
        "alias"       : "f",
        "description" : "File-name filter (regex)",
        "default"     : false
    },

    "quiet" : {
        "alias"       : "q",
        "description" : "Minimal output"
    },

    "recurse" : {
        "description" : "Search directories recursively",
        "default"     : true,
        "boolean"     : true
    },

    "separator" : {
        "description" : "String used to split combo files",
        "default"     : "&"
    },

    "suffix" : {
        "alias"       : "s",
        "description" : "Suffix to append to modified files",
        "default"     : "-combo"
    }
}
